                            javax.xml*,
                            org.apache.commons.lang.*;version="2.4",
                            org.dom4j*,
                            org.joda.time*;version="1.6",
                            org.slf4j*;version="1.5",
                            org.xml.sax*,
                            com.atlassian.plugin.connect.api*;version="${project.version}",
                            com.atlassian.plugin.connect.spi*;version="${project.version}",
