<application key="confluence">
    <permissions>
        <permission>read_content</permission>
        <permission>read_users_and_groups</permission>
        <permission>read_server_information</permission>
    </permissions>

    <remote-macro key="app1-macro" name="app1-macro" title="Remotable Plugin app1 Macro" url="/myMacro" icon-url="/public/sandcastles.jpg" output-type="block" body-type="rich-text" featured="true">
        <description>Example macro</description>
        <category name="development" />
        <macro-editor width="600" height="600" url="/myMacroEditor" />
        <parameters>
            <parameter name="footy" title="Favorite Footy" type="enum" required="true">
                <value name="American Football"/>
                <value name="Soccer"/>
                <value name="Rugby Union"/>
                <value name="Rugby League"/>
            </parameter>
        </parameters>
    </remote-macro>

    <remote-macro key="app1-nocache" name="app1-nocache" title="Remotable Plugin app1 No Cache Macro" url="/myMacro" icon-url="/public/sandcastles.jpg" output-type="block" body-type="rich-text">
        <description>Example macro</description>
        <category name="development" />
        <macro-editor width="600" height="600" url="/myMacroEditor" />
        <parameters>
            <parameter name="footy" title="Favorite Footy" type="enum" required="true">
                <value name="American Football"/>
                <value name="Soccer"/>
                <value name="Rugby Union"/>
                <value name="Rugby League"/>
            </parameter>
        </parameters>
        <context-parameters>
            <context-parameter name="page_id" type="query" />
            <context-parameter name="user_id" type="header" />
        </context-parameters>
    </remote-macro>

    <remote-macro key="app1-slow" name="app1-slow" title="Remotable Plugin 1 Slow" url="/mySlowMacro" output-type="block" body-type="none">
        <description>Slow macro that takes too long to render (for testing)</description>
        <parameters>
            <parameter name="sleep" title="Sleep" type="int" required="false" />
        </parameters>
    </remote-macro>

    <remote-macro key="app1-counter" name="app1-counter" url="/myCounterMacro" output-type="block" body-type="none">
        <description>Counter macro that increments a number (for testing)</description>
    </remote-macro>

    <remote-macro key="app1-image" name="app1-image" url="/myImageMacro" output-type="block" body-type="none">
        <description>Slow macro that takes too long to render (for testing)</description>
        <image-placeholder url="/public/sandcastles.jpg" />
    </remote-macro>

    <macro-page key="app1-page" name="app1-page" url="/myAdmin" output-type="block" body-type="none">
        <description>Page macro that displays info (for testing)</description>
    </macro-page>

