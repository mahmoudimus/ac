<application key="jira">
    <permissions>
        <permission>read_users_and_groups</permission>
        <permission>browse_projects</permission>
    </permissions>

    <webhook key="wh-plugin_enabled" event="plugin_enabled" url="/webHook/plugin_enabled" />
    <webhook key="wh-issue_created" event="issue_created" url="/webHook/issue_created" />
    <webhook key="wh-issue_updated" event="issue_updated" url="/webHook/issue_updated" />
    <webhook key="wh-issue_commented" event="issue_commented" url="/webHook/issue_commented" />

    <issue-panel-page key="remotePluginIssuePanelPage" name="Remotable Plugin app1 Issue Page" url="/myAdmin" />
    <issue-panel-page key="onlyBettyIssuePanelPage" name="Only Betty Panel" url="/myAdmin">
        <conditions>
            <condition url="/onlyBettyCondition" />
        </conditions>
    </issue-panel-page>

    <issue-tab-page key="remotePluginIssueTabPage" name="app1" url="/myAdmin" />

    <issue-tab-page key="onlyBettyIssueTabPage" name="Only Betty" url="/myAdmin">
        <conditions>
            <condition url="/onlyBettyCondition" />
        </conditions>
    </issue-tab-page>

    <remote-search-request-view key="remotePluginSearchRequestView" name="Raw Keys" url="/search/keys"/>

    <project-tab-page key="remotePluginProjectTab" name="app1" url="/myAdmin" />

    <project-tab-page key="restClientProjectTab" name="tab using rest client" url="/anonymousRestClient"/>

    <project-tab-page key="onlyBettyProjectTabPage" name="Only Betty" url="/myAdmin">
        <conditions>
            <condition url="/onlyBettyCondition" />
        </conditions>
    </project-tab-page>

    <dialog-page key="issueAction" name="Test Issue Action" section="operations-subtasks" url="/myDialog" />

    <project-config-tab key="remotePluginProjectConfigTab"
                        name="Remotable Project Config"
                        url="/myAdmin"
                        weight="10" location="projectgroup3" />

    <project-config-panel key="remoteProjectConfigPanel"
                          name="Remote Project Config Panel" url="/myAdmin" location="right" />

    <remote-workflow-post-function key="remoteWorkflowFunction" name="Remote Workflow Function"
                                   url="/remoteWorkflowFunction/transition_fired">
        <description>Remote workflow</description>
        <view url="/myWorkflowFunctionConfiguration?view" />
        <create url="/myWorkflowFunctionConfiguration?create" />
        <edit url="/myWorkflowFunctionConfiguration?edit" />
    </remote-workflow-post-function>

</application>