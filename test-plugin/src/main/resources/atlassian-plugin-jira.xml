<application key="jira">
    <permissions>
        <permission>read_users_and_groups</permission>
        <permission>browse_projects</permission>
    </permissions>

    <webhook key="wh-plugin_enabled" event="plugin_enabled" url="/webHook/plugin_enabled" />

    <issue-panel-page key="remotePluginIssuePanelPage" name="Remotable Plugin app1 Issue Page" url="/myContextAwareWebPanel" />
    <issue-panel-page key="onlyBettyIssuePanelPage" name="Only Betty Panel" url="/myContextAwareWebPanel">
        <conditions>
            <condition url="/onlyBettyCondition" />
        </conditions>
    </issue-panel-page>

    <issue-tab-page key="remotePluginIssueTabPage" name="app1" url="/myAdmin" />

    <issue-tab-page key="onlyBettyIssueTabPage" name="Only Betty" url="/myAdmin">
        <conditions>
            <condition url="/onlyBettyCondition" />
        </conditions>
    </issue-tab-page>

    <remote-search-request-view key="remotePluginSearchRequestView" name="Raw Keys" url="/search/keys"/>

    <project-tab-page key="remotePluginProjectTab" name="app1" url="/myAdmin" />

    <project-tab-page key="restClientProjectTab" name="tab using rest client" url="/anonymousRestClient"/>

    <project-tab-page key="onlyBettyProjectTabPage" name="Only Betty" url="/myAdmin">
        <conditions>
            <condition url="/onlyBettyCondition" />
        </conditions>
    </project-tab-page>

    <dialog-page key="issueAction" name="Test Issue Action" section="operations-subtasks" url="/myDialog" />

    <project-config-tab key="remotePluginProjectConfigTab"
                        name="Remotable Project Config"
                        url="/myAdmin"
                        weight="10" location="projectgroup3" />

    <project-config-panel key="remoteProjectConfigPanel"
                          name="Remote Project Config Panel" url="/myContextAwareWebPanel" location="right" />

    <remote-workflow-post-function key="remoteWorkflowFunction" name="Remote Workflow Function"
                                   url="/remoteWorkflowFunction/transition_fired">
        <description>Remote workflow</description>
        <view url="/myWorkflowFunctionConfiguration?view" />
        <create url="/myWorkflowFunctionConfiguration?create" />
        <edit url="/myWorkflowFunctionConfiguration?edit" />
    </remote-workflow-post-function>

    <remote-web-panel key="admin-header-web-panel"
                      location="system.admin.decorator.header"
                      name="Admin Header Web Panel"
                      url="/myContextAwareWebPanel" />

    <remote-web-panel key="project-config-header-web-panel"
                      location="atl.jira.proj.config.header"
                      name="Project Config Header Web Panel"
                      url="/myContextAwareWebPanel" />

    <remote-web-panel key="project-config-remote-web-panel-left"
                      location="webpanels.admin.summary.left-panels"
                      name="Project Config Remote Web Panel Left"
                      url="/myContextAwareWebPanel" />

    <remote-web-panel key="project-config-remote-webpanel-right"
                      location="webpanels.admin.summary.right-panels"
                      name="Project Config Remote Web Panel Right"
                      url="/myContextAwareWebPanel" />

    <remote-web-panel key="create-user-web-panel"
                      location="webpanels.admin.adduser"
                      name="Create User Web Panel"
                      url="/myContextAwareWebPanel" />

    <remote-web-panel key="add-user-web-panel"
                      location="webpanels.admin.adduser.count"
                      name="Add User Web Panel"
                      url="/myContextAwareWebPanel" />

    <remote-web-panel key="user-profile-web-panel"
                      location="webpanels.user.profile.summary.custom"
                      name="User Profile Web Panel"
                      url="/myContextAwareWebPanel" />

    <remote-web-panel key="issue-left-web-panel"
                      location="atl.jira.view.issue.left.context"
                      name="Issue Left Web Panel"
                      url="/myContextAwareWebPanel" />

    <remote-web-panel key="issue-right-web-panel"
                      location="atl.jira.view.issue.right.context"
                      name="Issue Right Web Panel"
                      url="/myContextAwareWebPanel" />

</application>