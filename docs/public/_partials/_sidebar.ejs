    <nav class="aui-navgroup aui-navgroup-vertical">
        <div class="aui-navgroup-inner">
            <ul class="aui-nav">
                <% for (var page in public.pages._data.guides) { %>
                <% var selected = page.split('.')[0] === current.source ? "class=aui-nav-selected" : ""; %>
                <li <%= selected %>>
                    <a href="<%= baseUrl %>/pages/guides/<%= page %>"><%= public.pages._data.guides[page].title %></a>
                </li>
                <% } %>
            </ul>

            <div class="aui-nav-heading">
                <strong>Core Concepts</strong>
            </div>
            <ul class="aui-nav">
            <% for(var concept in public.pages._data.concepts) { %>
            <% var selected = concept.split('.')[0] === current.source ? "class=aui-nav-selected" : ""; %>
            <li <%= selected %>>
                <a href="<%= baseUrl %>/pages/concepts/<%= concept %>"><%= public.pages._data.concepts[concept].title %></a>
            </li>
            <% } %>
            </ul>

            <%- partial('_module_list.ejs', { title: "Root Modules", modules: entities.root }) %>
