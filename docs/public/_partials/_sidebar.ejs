            <div class="aui-nav-heading">
                <strong>REST APIs</strong>
            </div>
            <ul class="aui-nav">
                <li>
                     <a href="<%= baseUrl %>/pages/rest-api/rest-api-browser">REST API Browser</a>
                </li>
                <li>
                    <a href="https://jira.atlassian.com/plugins/servlet/restbrowser#/">JIRA</a>
                </li>
                <li>
                    <a href="https://confluence.atlassian.com/plugins/servlet/restbrowser#/">Confluence</a>
                </li>
            </ul>

            <div class="aui-nav-heading">
                <strong>Resources</strong>
            </div>
            <ul class="aui-nav">
                <% for(var resource in public.pages._data.resources) { %>
                <% var selected = resource.split('.')[0] === current.source ? "class=aui-nav-selected" : ""; %>
                <li <%= selected %>>
                    <a href="<%= baseUrl %>/pages/resources/<%= resource %>"><%= public.pages._data.resources[resource].title %></a>
                </li>
                <% } %>
            </ul>

        </div>
    </nav>
</div>
