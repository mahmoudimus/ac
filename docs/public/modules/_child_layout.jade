h1
    = module.name

h2 Properties

table.aui
    thead
        tr
          th Name
          th Type
          th Description
      tbody
        - each prop in module.properties
            tr
                td
                    = prop.key
                td
                    - if (prop.type === 'object')
                        a(href = '/' + entityLinks[prop.id] + '.html')
                            span.aui-lozenge
                                = prop.id
                    - else
                        span.aui-lozenge
                            = prop.type
                td
                    = prop.description
                    - if (prop.enum)
                        div
                            strong Valid values:
                            - each value in prop.enum
                                &nbsp;
                                span.aui-lozenge
                                    = value

