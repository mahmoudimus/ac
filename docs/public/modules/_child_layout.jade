- var module = schemas[product].properties.modules.properties[current.source]
h1
    = module.title || module.items.title

!= yield

h2 Properties

table.aui
    thead
        tr
          th Name
          th Type
          th Description
      tbody
        - for(var prop in module.items.properties)
            tr
                td
                    = prop
                td
                    span.aui-lozenge
                        = module.items.properties[prop].type
                td
                    = module.items.properties[prop].description


