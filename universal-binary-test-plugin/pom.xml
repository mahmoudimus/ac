<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.atlassian.plugins</groupId>
        <artifactId>remotable-plugins-parent</artifactId>
        <version>0.8.1106</version>
    </parent>

    <artifactId>remotable-plugins-universal-binary-test-plugin</artifactId>
    <packaging>atlassian-plugin</packaging>

    <name>Atlassian Remotable Plugins - Universal Binary Sample</name>
    <description>A sample Universal Binary apps that uses Java as its main language</description>

    <dependencies>
        <dependency>
            <groupId>com.atlassian.plugins</groupId>
            <artifactId>remotable-plugins-container</artifactId>
            <version>${project.version}</version>
            <scope>test</scope>
            <classifier>standalone</classifier>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>remotable-plugins-plugin-api</artifactId>
            <version>${project.version}</version>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>javax.inject</groupId>
            <artifactId>javax.inject</artifactId>
            <version>1</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>com.atlassian.pluginkit</groupId>
            <artifactId>servlet-kit</artifactId>
            <version>${servletkit.version}</version>
        </dependency>

        <!-- test -->
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>remotable-plugins-test</artifactId>
            <version>${project.version}</version>
            <scope>test</scope>
            <!--<exclusions>-->
            <!--<exclusion>-->
            <!--<groupId>com.atlassian.plugins</groupId>-->
            <!--<artifactId>remotable-plugins-container</artifactId>-->
            <!--</exclusion>-->
            <!--</exclusions>-->
        </dependency>

        <!-- to install in the webapp -->
        <dependency>
            <groupId>com.atlassian.plugins</groupId>
            <artifactId>remotable-plugins-plugin</artifactId>
            <version>${project.version}</version>
            <scope>test</scope>
            <type>atlassian-plugin</type>
        </dependency>
        <dependency>
            <groupId>com.atlassian.webhooks</groupId>
            <artifactId>atlassian-webhooks-spi</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.atlassian.plugins</groupId>
            <artifactId>remotable-plugins-plugin</artifactId>
            <version>${project.version}</version>
            <type>test-jar</type>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>com.atlassian.refapp</groupId>
            <artifactId>atlassian-refapp-pageobjects</artifactId>
            <version>${refapp.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.atlassian.confluence</groupId>
            <artifactId>atlassian-confluence-pageobjects</artifactId>
            <version>${confluence.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.atlassian.jira</groupId>
            <artifactId>atlassian-jira-pageobjects</artifactId>
            <version>${jira.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.atlassian.selenium</groupId>
            <artifactId>atlassian-webdriver-core</artifactId>
            <version>${atlassian.selenium.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>commons-lang</groupId>
            <artifactId>commons-lang</artifactId>
            <version>2.6</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <excludes>
                        <exclude>**/META-INF/sisu</exclude>
                        <exclude>**/META-INF/sisu/*</exclude>
                    </excludes>
                </configuration>
            </plugin>
            <plugin>
                <groupId>com.atlassian.maven.plugins</groupId>
                <artifactId>maven-amps-plugin</artifactId>
                <configuration>
                    <jvmArgs>-Xmx512m -XX:MaxPermSize=192m</jvmArgs>
                    <extractDependencies>true</extractDependencies>
                    <containerVersion>${project.version}</containerVersion>
                    <skipManifestValidation>true</skipManifestValidation>
                    <enableDevToolbox>false</enableDevToolbox>
                    <enableFastdev>false</enableFastdev>

                    <!-- don't install the plugin by default, we use the UniversalBinariesContainerJUnitRunner -->
                    <installPlugin>false</installPlugin>

                    <systemPropertyVariables>
                        <xvfb.enable>${xvfb.enable}</xvfb.enable>
                        <atlassian.mail.senddisabled>false</atlassian.mail.senddisabled>
                        <sun.net.http.allowRestrictedHeaders>true</sun.net.http.allowRestrictedHeaders>
                    </systemPropertyVariables>

                    <functionalTestPattern>it/**/Test*.java</functionalTestPattern>

                    <instructions>
                        <Atlassian-Plugin-Key>sample-ub-java</Atlassian-Plugin-Key>
                        <Spring-Context>*;timeout:=60</Spring-Context>
                        <Import-Package>
                            javax.servlet*;version="2.5",
                            *;resolution:=optional
                        </Import-Package>
                    </instructions>

                    <log4jProperties>src/test/resources/log4j-refapp.properties</log4jProperties>

                    <pluginArtifacts>
                        <pluginArtifact>
                            <groupId>com.atlassian.webhooks</groupId>
                            <artifactId>atlassian-webhooks-plugin</artifactId>
                            <version>${webhooks.version}</version>
                        </pluginArtifact>
                        <pluginArtifact>
                            <groupId>com.atlassian.plugins</groupId>
                            <artifactId>remotable-plugins-plugin</artifactId>
                            <version>${project.version}</version>
                        </pluginArtifact>
                        <pluginArtifact>
                            <groupId>com.atlassian.activeobjects</groupId>
                            <artifactId>activeobjects-plugin</artifactId>
                            <version>${ao.version}</version>
                        </pluginArtifact>
                        <pluginArtifact>
                            <groupId>com.atlassian.activeobjects</groupId>
                            <artifactId>activeobjects-refapp-spi</artifactId>
                            <version>${ao.version}</version>
                        </pluginArtifact>
                        <pluginArtifact>
                            <groupId>${project.groupId}</groupId>
                            <artifactId>remotable-plugins-api</artifactId>
                            <version>${api.artifact.version}</version>
                        </pluginArtifact>
                        <pluginArtifact>
                            <groupId>${project.groupId}</groupId>
                            <artifactId>remotable-plugins-spi</artifactId>
                            <version>${api.artifact.version}</version>
                        </pluginArtifact>
                        <pluginArtifact>
                            <groupId>org.sonatype.sisu</groupId>
                            <artifactId>sisu-guice</artifactId>
                            <version>${sisu.guice.version}</version>
                        </pluginArtifact>
                        <pluginArtifact>
                            <groupId>org.apache.servicemix.bundles</groupId>
                            <artifactId>org.apache.servicemix.bundles.javax-inject</artifactId>
                            <version>1_1</version>
                        </pluginArtifact>
                        <pluginArtifact>
                            <groupId>org.codehaus.jettison</groupId>
                            <artifactId>jettison</artifactId>
                            <version>1.1</version>
                        </pluginArtifact>
                        <pluginArtifact>
                            <groupId>joda-time</groupId>
                            <artifactId>joda-time</artifactId>
                            <version>1.6</version>
                        </pluginArtifact>
                        <pluginArtifact>
                            <groupId>com.googlecode.json-simple</groupId>
                            <artifactId>json-simple</artifactId>
                            <version>1.1.1</version>
                        </pluginArtifact>
                        <pluginArtifact>
                            <groupId>com.atlassian.labs</groupId>
                            <artifactId>confluence-xmlrpc-java-client-plugin</artifactId>
                            <version>${confluence.client.version}</version>
                        </pluginArtifact>
                        <pluginArtifact>
                            <groupId>com.atlassian.jira</groupId>
                            <artifactId>jira-rest-java-client-plugin</artifactId>
                            <version>${jira.client.version}</version>
                        </pluginArtifact>
                    </pluginArtifacts>

                    <libArtifacts>
                        <libArtifact>
                            <groupId>javax.mail</groupId>
                            <artifactId>mail</artifactId>
                            <version>1.4.1</version>
                        </libArtifact>
                        <libArtifact>
                            <groupId>com.atlassian.mail</groupId>
                            <artifactId>atlassian-mail</artifactId>
                            <version>2.4.1</version>
                        </libArtifact>
                        <libArtifact>
                            <groupId>com.atlassian.util.concurrent</groupId>
                            <artifactId>atlassian-util-concurrent</artifactId>
                            <version>${atlassian-util-concurrent.version}</version>
                        </libArtifact>
                    </libArtifacts>

                    <products>
                        <product>
                            <id>refapp</id>
                            <version>${refapp.version}</version>
                        </product>
                    </products>

                    <testGroups>
                        <!--
                        <testGroup>
                            <id>refapp</id>
                            <productIds>
                                <productId>refapp</productId>
                            </productIds>
                        </testGroup>
                        -->
                        <testGroup>
                            <id>refapp+container</id>
                            <productIds>
                                <productId>refapp</productId>
                            </productIds>
                            <systemProperties>
                                <pluginMode>container</pluginMode>
                            </systemProperties>
                        </testGroup>
                    </testGroups>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>com.atlassian.plugins</groupId>
                                    <artifactId>remotable-plugins-container</artifactId>
                                    <version>${project.version}</version>
                                    <classifier>standalone</classifier>
                                </artifactItem>
                            </artifactItems>
                            <stripVersion>true</stripVersion>
                            <outputDirectory>${build.directory}</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

        </plugins>
    </build>
</project>
