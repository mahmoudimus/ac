<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <groupId>com.atlassian.labs</groupId>
        <artifactId>remoteapps-parent</artifactId>
        <version>${VERSION_NUMBER}</version>
    </parent>


    <modelVersion>4.0.0</modelVersion>
    <artifactId>remoteapps-smoke-tests</artifactId>
    <name>Atlassian Remote Apps - Smoke Tests</name>
    <description>
        A jar of junit smoke tests to run on production and
        dogfooding servers
    </description>

    <dependencies>
        <dependency>
            <groupId>com.atlassian.selenium</groupId>
            <artifactId>atlassian-webdriver-refapp</artifactId>
            <version>2.0</version>
        </dependency>
        <dependency>
            <groupId>com.atlassian.selenium</groupId>
            <artifactId>atlassian-webdriver-confluence</artifactId>
            <version>2.0</version>
        </dependency>
        <dependency>
            <groupId>com.atlassian.jira</groupId>
            <artifactId>atlassian-jira-pageobjects</artifactId>
            <version>${jira.version}</version>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>remoteapps-plugin</artifactId>
            <version>${project.version}</version>
            <type>test-jar</type>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.10</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-source-plugin</artifactId>
                <version>2.1.2</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>test-jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <skipTests>true</skipTests>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>run-jira-smoke-tests</id>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <version>2.11</version>
                        <configuration>
                            <skipTests>false</skipTests>
                            <systemPropertyVariables>
                                <remoteapps.adminUsername>${remoteapps.adminUsername}</remoteapps.adminUsername>
                                <remoteapps.adminPassword>${remoteapps.adminPassword}</remoteapps.adminPassword>
                                <remoteapps.targetBaseUrl>${remoteapps.targetBaseUrl}</remoteapps.targetBaseUrl>
                                <baseurl.jira>${remoteapps.targetBaseUrl}</baseurl.jira>
                                <http.jira.port>443</http.jira.port>
                                <context.jira.path>/</context.jira.path>
                                <testedProductClass>com.atlassian.jira.pageobjects.JiraTestedProduct</testedProductClass>
                                <xvfb.enable>${xvfb.enable}</xvfb.enable>
                                <webdriver.browser>${webdriver.browser}</webdriver.browser>
                            </systemPropertyVariables>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
            <repositories>
                <repository>
                    <id>local</id>
                    <url>file://${basedir}/repository</url>
                </repository>
            </repositories>
        </profile>
        <profile>
            <id>run-confluence-smoke-tests</id>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <skipTests>false</skipTests>
                            <systemPropertyVariables>
                                <remoteapps.adminUsername>${remoteapps.adminUsername}</remoteapps.adminUsername>
                                <remoteapps.adminPassword>${remoteapps.adminPassword}</remoteapps.adminPassword>
                                <remoteapps.targetBaseUrl>${remoteapps.targetBaseUrl}</remoteapps.targetBaseUrl>
                                <baseurl.confluence>${remoteapps.targetBaseUrl}</baseurl.confluence>
                                <http.confluence.port>443</http.confluence.port>
                                <context.confluence.path>/wiki</context.confluence.path>
                                <testedProductClass>com.atlassian.webdriver.confluence.ConfluenceTestedProduct</testedProductClass>
                                <xvfb.enable>${xvfb.enable}</xvfb.enable>
                                <webdriver.browser>${webdriver.browser}</webdriver.browser>
                            </systemPropertyVariables>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
            <repositories>
                <repository>
                    <id>local</id>
                    <url>file://${project.build.directory}</url>
                </repository>
            </repositories>
        </profile>
    </profiles>

    <properties>
        <remoteapps.adminUsername/>
        <remoteapps.adminPassword/>
        <remoteapps.targetBaseUrl/>
    </properties>
</project>
