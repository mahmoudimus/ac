<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <groupId>com.atlassian.plugins</groupId>
        <artifactId>remotable-plugins-parent</artifactId>
        <version>${VERSION_NUMBER}</version>
    </parent>


    <modelVersion>4.0.0</modelVersion>
    <artifactId>remotable-plugins-smoke-tests</artifactId>
    <name>Atlassian Remotable Plugins - Smoke Tests</name>
    <description>
        A jar of junit smoke tests to run on production and
        dogfooding servers
    </description>

    <dependencies>
        <dependency>
            <groupId>com.atlassian.refapp</groupId>
            <artifactId>atlassian-refapp-pageobjects</artifactId>
            <version>${refapp.version}</version>
        </dependency>
        <dependency>
            <groupId>com.atlassian.confluence</groupId>
            <artifactId>atlassian-confluence-pageobjects</artifactId>
            <version>${confluence.version}</version>
        </dependency>
        <dependency>
            <groupId>com.atlassian.jira</groupId>
            <artifactId>atlassian-jira-pageobjects</artifactId>
            <version>${jira.version}</version>
        </dependency>
        <dependency>
            <groupId>com.atlassian.selenium</groupId>
            <artifactId>atlassian-webdriver-core</artifactId>
            <version>${atlassian.selenium.version}</version>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>remotable-plugins-plugin</artifactId>
            <version>${project.version}</version>
            <type>test-jar</type>
        </dependency>

        <!-- because maven 3 sucks and won't depend on the right version -->
        <dependency>
            <groupId>com.atlassian.plugins</groupId>
            <artifactId>remotable-plugins-container</artifactId>
            <version>${project.version}</version>
            <classifier>standalone</classifier>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>remotable-plugins-api</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>remotable-plugins-kit-common</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>remotable-plugins-ringojs-kit</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>remotable-plugins-host-common</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>compile</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-source-plugin</artifactId>
                <version>2.1.2</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>test-jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-jar-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>test-jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <skipTests>true</skipTests>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>run-jira-smoke-tests</id>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <version>2.11</version>
                        <configuration>
                            <skipTests>false</skipTests>
                            <systemPropertyVariables>
                                <remotable.plugins.adminUsername>${remotable.plugins.adminUsername}</remotable.plugins.adminUsername>
                                <remotable.plugins.adminPassword>${remotable.plugins.adminPassword}</remotable.plugins.adminPassword>
                                <remotable.plugins.targetBaseUrl>${remotable.plugins.targetBaseUrl}</remotable.plugins.targetBaseUrl>
                                <baseurl.jira>${remotable.plugins.targetBaseUrl}</baseurl.jira>
                                <http.jira.port>443</http.jira.port>
                                <context.jira.path>/</context.jira.path>
                                <testedProductClass>com.atlassian.jira.pageobjects.JiraTestedProduct</testedProductClass>
                                <xvfb.enable>${xvfb.enable}</xvfb.enable>
                            </systemPropertyVariables>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>run-confluence-smoke-tests</id>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <version>2.11</version>
                        <configuration>
                            <skipTests>false</skipTests>
                            <systemPropertyVariables>
                                <remotable.plugins.adminUsername>${remotable.plugins.adminUsername}</remotable.plugins.adminUsername>
                                <remotable.plugins.adminPassword>${remotable.plugins.adminPassword}</remotable.plugins.adminPassword>
                                <remotable.plugins.targetBaseUrl>${remotable.plugins.targetBaseUrl}</remotable.plugins.targetBaseUrl>
                                <baseurl.confluence>${remotable.plugins.targetBaseUrl}</baseurl.confluence>
                                <http.confluence.port>443</http.confluence.port>
                                <context.confluence.path>/wiki</context.confluence.path>
                                <testedProductClass>com.atlassian.confluence.pageobjects.ConfluenceTestedProduct</testedProductClass>
                                <xvfb.enable>${xvfb.enable}</xvfb.enable>
                            </systemPropertyVariables>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

    <properties>
        <remotable.plugins.adminUsername/>
        <remotable.plugins.adminPassword/>
        <remotable.plugins.targetBaseUrl/>
    </properties>
</project>
