<remote-app key="{{appKey}}" name="Remote App - {{appKey}}" version="1" icon-url="https://github.com/favicon.ico"
            display-url="{{baseUrl}}">
    <vendor name="Atlassian" url="http://atlassian.com" />
    <description>
        This really great app
    </description>

    <permissions>
        <permission scope="resttest" />
    </permissions>

    <oauth>
        <public-key>
            {{publicKey}}
        </public-key>
    </oauth>
    <entity-type key="project" name="Project" pluralized-name="Projects" icon-url="https://github.com/favicon.ico"/>

    <admin-page key="remoteAppAdmin" name="Remote App {{appKey}} Admin" url="/myadmin" />
    <general-page key="remoteAppGeneral" name="Remote App {{appKey}} General" url="/myadmin" height="600" width="700"/>
    <profile-page key="remoteAppProfile" name="Remote App {{appKey}} Profile" url="/myadmin" />

    <issue-panel key="remoteAppIssuePanel" name="Remote App {{appKey}} issue panel" url="/myadmin" location="atl.jira.view.issue.right.context">
           <resource name="view" type="static"><![CDATA[<b>Hello World 2!</b>]]></resource>
    </issue-panel>

    <web-hook event="remote_app_started" url="/webhook/remote_app_started" />

</remote-app>
