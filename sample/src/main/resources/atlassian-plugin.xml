<atlassian-plugin key="app1" name="${project.name}" plugins-version="2">
    <plugin-info>
        <version>${project.version}</version>
        <param name="configure.url">/plugins/servlet/remoteapps/app1/remoteAppConfig</param>
        <permissions>
            <permission>resttest</permission>
            <permission>read_app_links</permission>
        </permissions>
    </plugin-info>

    <junit key="all" package="junit.all" />
    <junit key="confluence" package="junit.confluence" application="confluence"/>
    <junit key="jira" package="junit.jira" application="jira"/>

    <component key="signedRequestHandlerAccessor" class="junit.SignedRequestHandlerAccessor" />

    <!-- converted modules -->
    <dynamic-application-link key="app1" icon-url="/sandcastles.jpg" application="remoteapp">
        <entity-type key="project" name="Project" pluralized-name="Projects" icon-url="https://github.com/favicon.ico"/>
    </dynamic-application-link>

    <admin-page key="remoteAppAdmin" name="Remote App app1 Admin" url="/myAdmin" />
    <configure-page key="remoteAppConfig" name="Remote App app1 Configure" url="/myAdmin" />
    <general-page key="remoteAppGeneral" name="Remote App app1 General"
                  link-name="Remote App app1 General Link" url="/myAdmin"
                  icon-url="/sandcastles.jpg" height="600" width="700"/>
    <dialog-page key="remoteAppDialog" name="Remote App app1 Dialog" url="/myDialog" />
    <profile-page key="remoteAppProfile" name="Remote App app1 Profile" url="/myAdmin" />


</atlassian-plugin>
