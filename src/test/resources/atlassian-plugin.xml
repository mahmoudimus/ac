<atlassian-plugin key="test" name="test-plugin" plugins-version="2">
    <plugin-info>
        <version>1</version>
    </plugin-info>

    <remote-app key="myapp" i18n-name-key="My App" icon-url="https://github.com/favicon.ico"
                display-url="http://localhost.localdomain:5990/refapp" rpc-url="http://localhost:5990/refapp">
        <entity-type key="repository" i18n-key="Repository" pluralized-i18n-key="Repositories" icon-url="https://github.com/favicon.ico"/>

        <admin-page key="admin" name="My Admin" url="/plugins/servlet/myadmin?name=First" />
    </remote-app>

    <!-- impl -->
    <servlet key="myadmin" class="com.atlassian.labs.remoteapps.test.MyAdminServlet">
        <url-pattern>/myadmin</url-pattern>
    </servlet>
    <component-import key="templateRenderer" interface="com.atlassian.templaterenderer.TemplateRenderer" />

    <!-- impl of second remote app using dynamic registration -->
    <servlet key="myapp2" class="com.atlassian.labs.remoteapps.test.remoteapp2.RemoteApp2Servlet">
        <url-pattern>/remoteapp2/register</url-pattern>
    </servlet>
    <component key="myapp2reg" class="com.atlassian.labs.remoteapps.test.remoteapp2.RemoteApp2Rego" />
    <component-import key="requestFactory" interface="com.atlassian.sal.api.net.RequestFactory" />
    <component-import key="eventManager" interface="com.atlassian.plugin.event.PluginEventManager" />

</atlassian-plugin>
