<atlassian-plugin key="sample-installer" name="Remoteapp sample installer" plugins-version="2">
    <plugin-info>
        <version>1</version>
    </plugin-info>

    <component key="registration" class="com.atlassian.labs.remoteapps.sample.test.RegistrationOnStartListener" public="true"
            interface="com.atlassian.sal.api.lifecycle.LifecycleAware" />
    <component-import key="speakeasy" interface="com.atlassian.labs.speakeasy.external.SpeakeasyService" />

    <junit key="all" package="com.atlassian.labs.remoteapps.sample.junit.all" />
    <junit key="confluence" package="com.atlassian.labs.remoteapps.sample.junit.confluence" application="confluence"/>
    <junit key="jira" package="com.atlassian.labs.remoteapps.sample.junit.jira" application="jira"/>
</atlassian-plugin>
