        <dependency>
            <groupId>com.atlassian.labs</groupId>
            <artifactId>jira4-compat</artifactId>
            <version>0.6.1</version>
            <exclusions>
                <exclusion>
                    <groupId>com.atlassian.crowd</groupId>
                    <artifactId>embedded-crowd-api</artifactId>
