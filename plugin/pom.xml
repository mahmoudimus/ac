    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>ru.circumflex</groupId>
                    <artifactId>maven-cx-plugin</artifactId>
                    <version>3.0-20120213.165004-3</version>
                    <dependencies>
                        <dependency>
                            <groupId>log4j</groupId>
                            <artifactId>log4j</artifactId>
                            <version>1.2.15</version>
                        </dependency>
                    </dependencies>
                </plugin>

                <plugin>
                    <groupId>org.twdata.maven</groupId>
                    <artifactId>maven-cli-plugin</artifactId>
                    <version>1.0.4</version>
                    <configuration>
                        <commands>
                            <pi>resources
                                com.atlassian.maven.plugins:maven-amps-plugin:filter-plugin-descriptor
                                compile
                                com.atlassian.maven.plugins:maven-amps-plugin:copy-bundled-dependencies
                                net.alchim31.maven:yuicompressor-maven-plugin:compress
                                org.codehaus.mojo:xml-maven-plugin:transform
                                com.atlassian.maven.plugins:maven-amps-plugin:generate-manifest
                                com.atlassian.maven.plugins:maven-amps-plugin:jar
                                com.atlassian.maven.plugins:maven-amps-plugin:install
                            </pi>
                            <docco>ru.circumflex:maven-cx-plugin:docco#docco</docco>
                        </commands>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
        <plugins>
            <plugin>
                <groupId>com.atlassian.maven.plugins</groupId>
                <artifactId>maven-amps-plugin</artifactId>
                <configuration>
                    <skipManifestValidation>true</skipManifestValidation>
                    <jvmArgs>-Xmx512m -XX:MaxPermSize=192m</jvmArgs>
                    <instructions>
                        <Import-Package>
                            com.atlassian.confluence.plugin.descriptor.web.descriptors;resolution:=optional,
                            com.atlassian.confluence.plugin.webresource;resolution:=optional,
                            com.atlassian.confluence.security.websudo;resolution:=optional,
                            com.atlassian.jira;resolution:=optional,
                            com.atlassian.jira.config;resolution:=optional,
                            com.atlassian.jira.plugin.webfragment.descriptors;resolution:=optional,
                            com.atlassian.jira.security;resolution:=optional,
                            com.atlassian.jira.security.websudo;resolution:=optional,
                            com.atlassian.oauth*;version="(1.2,2.0]",
                            com.atlassian.plugin.*;version="2.8",
                            com.atlassian.refapp.auth.external;resolution:=optional,
                            com.atlassian.sal.api.*;version="(2.4,3.0]",
                            com.sun.mail.handlers;resolution:=optional,
                            net.oauth*,
                            javax.inject,
                            org.apache.commons.lang.*;version="2.4",
                            org.slf4j*;version="1.5",
                            *;resolution:=optional
                        </Import-Package>
                        <DynamicImport-Package>com.atlassian.labs.speakeasy.*
                        </DynamicImport-Package>
                        <Export-Package>
                            javax.inject;version="1",
                            redstone.xmlrpc;version="${redstone.version}",
                            com.atlassian.xmlrpc;version="${atlassian.xmlrpc.version}",
                            com.atlassian.jira.rest.client.p3;version="${jira.client.version}",
                            com.atlassian.jira.rest.client.domain;version="${jira.client.version}",
                            com.atlassian.labs.remoteapps.spi*,
                            com.atlassian.labs.remoteapps.api*
                        </Export-Package>
                        <Spring-Context>*;timeout:=60</Spring-Context>
                    </instructions>
                    <systemPropertyVariables>
                        <xvfb.enable>${xvfb.enable}</xvfb.enable>
                        <atlassian.mail.senddisabled>false</atlassian.mail.senddisabled>
                        <sun.net.http.allowRestrictedHeaders>true
                        </sun.net.http.allowRestrictedHeaders>
                        <!--atlassian.dev.mode>false</atlassian.dev.mode-->
                    </systemPropertyVariables>
                    <!-- uncomment when it is safe to upgrade amps:  https://studio.atlassian.com/browse/AMPS-663 -->
                    <!--enableDevToolbox>false</enableDevToolbox-->
                    <enableFastdev>false</enableFastdev>
                    <functionalTestPattern>it/**/Test*.java</functionalTestPattern>
                    <pluginArtifacts>
                        <pluginArtifact>
                            <groupId>${project.groupId}</groupId>
                            <artifactId>remoteapps-sample</artifactId>
                            <version>${project.version}</version>
                        </pluginArtifact>
                        <pluginArtifact>
                            <groupId>com.atlassian.functest</groupId>
                            <artifactId>functest-plugin</artifactId>
                            <version>0.3</version>
                        </pluginArtifact>
                        <pluginArtifact>
                            <groupId>com.atlassian.labs</groupId>
                            <artifactId>speakeasy-plugin</artifactId>
                            <version>${speakeasy.version}</version>
                        </pluginArtifact>
                    </pluginArtifacts>
                    <products>
                        <product>
                            <id>refapp</id>
                            <version>${refapp.version}</version>
                            <log4jProperties>src/test/resources/log4j-refapp.properties
                            </log4jProperties>
                            <libArtifacts>
                                <!-- necessary for Speakeasy mail handling -->
                                <libArtifact>
                                    <groupId>org.apache.commons</groupId>
                                    <artifactId>commons-email</artifactId>
                                    <version>1.2</version>
                                </libArtifact>
                                <libArtifact>
                                    <groupId>javax.mail</groupId>
                                    <artifactId>mail</artifactId>
                                    <version>1.4.1</version>
                                </libArtifact>
                                <libArtifact>
                                    <groupId>com.atlassian.mail</groupId>
                                    <artifactId>atlassian-mail</artifactId>
                                    <version>2.4.1</version>
                                </libArtifact>
                            </libArtifacts>
                        </product>
                        <product>
                            <id>jira</id>
                            <version>${jira.version}</version>
                            <log4jProperties>src/test/resources/log4j-jira.properties
                            </log4jProperties>
                            <productDataPath>
                                ${basedir}/src/test/resources/jira-generated-test-resources.zip
                            </productDataPath>
                            <systemPropertyVariables>
                                <product>jira</product>
                            </systemPropertyVariables>
                        </product>
                        <product>
                            <id>confluence</id>
                            <version>${confluence.version}</version>
                            <log4jProperties>src/test/resources/log4j-confluence.properties
                            </log4jProperties>
                            <productDataPath>
                                ${basedir}/src/test/resources/confluence-generated-test-resources.zip
                            </productDataPath>
                            <systemPropertyVariables>
                                <product>confluence</product>
                            </systemPropertyVariables>
                            <libArtifacts>
                                <!-- override to allow bug fixes for memory leaks when developing.  See PLUG-484 -->
                                <libArtifact>
                                    <groupId>com.atlassian.plugins</groupId>
                                    <artifactId>atlassian-plugins-webfragment</artifactId>
                                    <version>${confluence.plugins.version}</version>
                                </libArtifact>
                            </libArtifacts>
                        </product>
                    </products>
                    <testGroups>
                        <testGroup>
                            <id>refapp</id>
                            <productIds>
                                <productId>refapp</productId>
                            </productIds>
                            <excludes>
                                <exclude>it/confluence/*.java</exclude>
                                <exclude>it/jira/*.java</exclude>
                            </excludes>
                        </testGroup>
                        <testGroup>
                            <id>confluence</id>
                            <productIds>
                                <productId>confluence</productId>
                            </productIds>
                            <systemProperties>
                                <testedProductClass>
                                    com.atlassian.labs.remoteapps.test.confluence.FixedConfluenceTestedProduct
                                </testedProductClass>
                            </systemProperties>
                            <excludes>
                                <exclude>it/jira/*.java</exclude>
                                <exclude>it/refapp/*.java</exclude>
                            </excludes>
                        </testGroup>
                        <testGroup>
                            <id>jira</id>
                            <productIds>
                                <productId>jira</productId>
                            </productIds>
                            <systemProperties>
                                <testedProductClass>
                                    com.atlassian.jira.pageobjects.JiraTestedProduct
                                </testedProductClass>
                            </systemProperties>
                            <excludes>
                                <exclude>it/confluence/*.java</exclude>
                                <exclude>it/refapp/*.java</exclude>
                            </excludes>
                        </testGroup>
                    </testGroups>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>2.3.5</version>
                <executions>
                    <execution>
                        <id>generate-test-manifest</id>
                        <goals>
                            <goal>manifest</goal>
                        </goals>
                        <phase>generate-test-resources</phase>
                        <configuration>
                            <instructions>
                                <Bundle-SymbolicName>plugin-tests</Bundle-SymbolicName>
                                <Import-Package>
                                    com.atlassian.labs.remoteapps*,
                                    com.atlassian.plugin.*;version="2.8",
                                    *;resolution:=optional
                                </Import-Package>
                                <Export-Package></Export-Package>
                            </instructions>
                            <manifestLocation>${project.build.testOutputDirectory}/META-INF
                            </manifestLocation>
                            <classifier>tests</classifier>
                            <supportedProjectTypes>
                                <supportedProjectType>atlassian-plugin</supportedProjectType>
                            </supportedProjectTypes>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>net.alchim31.maven</groupId>
                <artifactId>yuicompressor-maven-plugin</artifactId>
                <version>1.1</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>compress</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <nosuffix>true</nosuffix>
                    <gzip>true</gzip>
                    <jswarn>false</jswarn>
                    <aggregations>
                        <aggregation>
                            <removeIncluded>false</removeIncluded>
                            <insertNewLine>true</insertNewLine>
                            <output>${project.build.outputDirectory}/all.js</output>
                            <includes>
                                <include>js/iframe/*.js</include>
                            </includes>
                        </aggregation>
                    </aggregations>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>xml-maven-plugin</artifactId>
                <version>1.0</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>transform</goal>
                        </goals>
                        <phase>process-resources</phase>
                    </execution>
                </executions>
                <configuration>
                    <transformationSets>
                        <transformationSet>
                            <dir>${project.build.outputDirectory}</dir>
                            <includes>
                                <include>atlassian-plugin.xml</include>
                            </includes>
                            <stylesheet>${basedir}/src/main/build/plugin-merge.xsl</stylesheet>
                            <outputDir>${project.build.outputDirectory}</outputDir>
                            <parameters>
                                <parameter>
                                    <name>baseDir</name>
                                    <value>${project.build.outputDirectory}</value>
                                </parameter>
                            </parameters>
                        </transformationSet>
                    </transformationSets>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.2</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>test-jar</goal>
                        </goals>
                        <phase>package</phase>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <includeArtifactIds>remoteapps-kit-common</includeArtifactIds>
                            <stripVersion>true</stripVersion>
                            <outputDirectory>${project.build.outputDirectory}</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <pluginRepositories>
        <pluginRepository>
            <id>twdata-m2-repository</id>
            <name>Don's repo, used for circumflex fork</name>
            <url>http://twdata-m2-repository.googlecode.com/svn</url>
            <snapshots>
                <enabled>true</enabled>
                <updatePolicy>never</updatePolicy>
            </snapshots>
        </pluginRepository>
    </pluginRepositories>

    <properties>
        <product>refapp</product>
        <confluence.plugins.version>2.10.1</confluence.plugins.version>
        <docco.pageTemplate>${basedir}/src/main/build/page.html.ftl</docco.pageTemplate>
        <docco.indexTemplate>${basedir}/src/main/build/atlassian-remote-app.xml.ftl
        </docco.indexTemplate>
        <docco.indexFile>atlassian-remote-app.xml</docco.indexFile>
    </properties>

</project>
