<atlassian-plugin key="remotable-plugins-smoke-test"
            name="Remotable Plugins Smoke Tests"
            plugins-version="2"
        xmlns="https://remoteapps.jira.com/rest/remotable-plugins/1/installer/schema/atlassian-plugin">
    <plugin-info>
        <description>
            Smoke test app to verify a valid installation
        </description>
        <version>1</version>
        <vendor name="Atlassian" url="http://atlassian.com" />
    </plugin-info>

    <remote-plugin-container key="container"
            display-url="%%BASEURL%%/download/resources/com.atlassian.labs.remoteapps-plugin:smoke-test" />

    <general-page key="smoke-general-page" name="General Page (smoke test)" url="/general-page.html"/>
</atlassian-plugin>
