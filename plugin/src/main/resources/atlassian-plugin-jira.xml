<application key="jira">
    <component key="jiraProductAccessor" class="com.atlassian.labs.remoteapps.product.jira.JiraProductAccessor"/>

    <web-item key="general-dropdown-item" section="system.top.navigation.bar" weight="100">
        <label>Remote Apps</label>
        <link linkId="general_dropdown_linkId"/>
    </web-item>

    <web-section key="remoteapps.general" location="general_dropdown_linkId">
    </web-section>

    <web-item key="remoteapps.all.link" section="general_dropdown_linkId/remoteapps.general" weight="1">
        <label>All Remote Apps</label>
        <link>/secure/ViewProfile.jspa#selectedTab=com.atlassian.labs.speakeasy-plugin:jira5compat-speakeasy-plugins</link>
    </web-item>


    <web-resource name="Resources" key="resources">
            <resource name="viewIssueMessage.js" type="download" location="js/viewIssueMessage.js"></resource>
            <context>jira.view.issue</context>
    </web-resource>

    <remote-module key="jira-profile-page" name="User Profile Page"
                   class="com.atlassian.labs.remoteapps.modules.page.jira.JiraProfileTabModuleGenerator">
        <description>A user profile page decorated as a user profile tab</description>
        <schema id="page.xsd" path="/xsd/page.xsd" type="PageType"/>
    </remote-module>

    <remote-module key="jira-webhooks" name="Web Hook" class="com.atlassian.labs.remoteapps.modules.webhook.WebHookModuleGenerator">
        <description>Registration for a web hook callback from an internal event</description>
        <schema id="webhook.xsd" path="/xsd/webhook-jira.xsd" type="WebHookType"/>
    </remote-module>

    <api-scope key="read_users_and_groups"
               class="com.atlassian.labs.remoteapps.product.jira.JiraReadUsersAndGroupsScope"
               name="Read Users and Groups">
        <description>
            View users and groups
        </description>
    </api-scope>

    <api-scope key="browse_projects"
               class="com.atlassian.labs.remoteapps.product.jira.BrowseProjectsScope"
               name="Browse Projects">
        <description>
            Permission to browse projects, search issues, and view individual issues (except issues that have
            been restricted via Issue Security).
        </description>
    </api-scope>

    <api-scope key="create_issues"
               class="com.atlassian.labs.remoteapps.product.jira.JiraCreateIssuesScope"
               name="Create Issues">
        <description>
            Permission to create issues in the project. (Note that the Create Attachments permission is required in
            order to create
            attachments.) Includes the ability to create sub-tasks (if sub-tasks are enabled).
        </description>
    </api-scope>

    <api-scope key="edit_issues"
               class="com.atlassian.labs.remoteapps.product.jira.JiraEditIssuesScope"
               name="Edit Issues">
        <description>
            Permission to edit issues (excluding the 'Due Date' field â€” see the Schedule Issues permission). Includes
            the ability to convert issues to sub-tasks and vice versa (if sub-tasks are enabled). Note that the Delete
            Issue permission is required in order to delete issues.
        </description>
    </api-scope>

    <api-scope key="resolve_issues"
               class="com.atlassian.labs.remoteapps.product.jira.JiraResolveIssuesScope"
               name="Resolve Issues">
        <description>
            Permission to resolve and reopen issues. This also includes the ability to set the 'Fix For version' field
            for issues. Also see the Close Issues permission.
        </description>
    </api-scope>

    <rest key="rest-jira" path="/remoteapps" version="1">
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
        <package>com.atlassian.labs.remoteapps.rest</package>
    </rest>


