<application key="jira">

    <rest key="rest" path="/atlassian-connect" version="1">
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
        <package>com.atlassian.plugin.connect.plugin.rest</package>
    </rest>

    <!-- JIRA specific javascript modules -->
    <web-resource key="workflow-post-function">
        <resource type="download" name="workflow-post-function.js" location="js/jira/workflow-post-function/workflow-post-function.js" />
        <resource type="download" name="workflow-post-function-rpc.js" location="js/jira/workflow-post-function/workflow-post-function-rpc.js" />
        <dependency>com.atlassian.auiplugin:ajs</dependency>
        <dependency>com.atlassian.plugins.atlassian-connect-plugin:ap-core</dependency>
    </web-resource>

    <web-resource key="events">
        <resource type="download" name="jira-events.js" location="/js/jira/events.js" />
        <dependency>com.atlassian.auiplugin:ajs</dependency>
        <dependency>com.atlassian.plugins.atlassian-connect-plugin:ap-core</dependency>
    </web-resource>

    <web-resource key="atlassian-connect-resources" name="Connect resources for inclusion on every page.">
        <context>atl.admin</context>
        <context>atl.general</context>
        <!-- workaround for AC-703, the 'preview' view does not include atl.general resources (CONF-30617) -->
        <context>preview</context>
        <dependency>com.atlassian.plugins.atlassian-connect-plugin:jira-workflow-post-function</dependency>
        <dependency>com.atlassian.plugins.atlassian-connect-plugin:jira-events</dependency>
    </web-resource>

    <!-- plugin points -->
    <described-module-type key="profile-page" name="User Profile Page" class="com.atlassian.plugin.connect.plugin.module.jira.JiraProfileTabModuleDescriptor">
        <description>
            A full-sized page that will be decorated as a tab in the user's profile area.
        </description>
    </described-module-type>

    <described-module-type key="remote-search-request-view" class="com.atlassian.plugin.connect.plugin.module.jira.searchrequestview.RemoteSearchRequestViewModuleDescriptor">
        <description>
            A search request view that redirects to the url with found issue keys as the
            'issues' query parameter
        </description>
    </described-module-type>

    <described-module-type key="project-tab-page" class="com.atlassian.plugin.connect.plugin.module.jira.projecttab.ProjectTabPageModuleDescriptor">
        <description>
            A remote page decorated as its own JIRA project tab
        </description>
    </described-module-type>

    <described-module-type key="component-tab-page" class="com.atlassian.plugin.connect.plugin.module.jira.componenttab.ComponentTabPageModuleDescriptor">
        <description>
            A remote page decorated as its own JIRA component tab
        </description>
    </described-module-type>

    <described-module-type key="version-tab-page" class="com.atlassian.plugin.connect.plugin.module.jira.versiontab.VersionTabPageModuleDescriptor">
        <description>
            A remote page decorated as a tab on the project version page.
        </description>
    </described-module-type>

    <described-module-type key="issue-tab-page" class="com.atlassian.plugin.connect.plugin.module.jira.issuetab.IssueTabPageModuleDescriptor">
        <description>
            A remote page decorated as its own JIRA issue tab but not included in All tab as it has no individual actions
        </description>
    </described-module-type>

    <described-module-type key="issue-panel-page" class="com.atlassian.plugin.connect.plugin.module.jira.issuepanel.IssuePanelPageModuleDescriptor">
        <description>
            A remote page decorated as a web panel on the view issue page
        </description>
    </described-module-type>

    <described-module-type key="project-config-panel" class="com.atlassian.plugin.connect.plugin.module.jira.projectconfig.ProjectConfigWebPanelModuleDescriptor">
        <description>
            A remote page decorated as a web panel on the project configuration page.
        </description>
    </described-module-type>

    <described-module-type key="project-config-tab" class="com.atlassian.plugin.connect.plugin.module.jira.projectconfig.ProjectConfigTabModuleDescriptor">
        <description>
            A remote page decorated as a tab on the project configuration page.
        </description>
    </described-module-type>

    <described-module-type key="remote-workflow-post-function" class="com.atlassian.plugin.connect.plugin.module.jira.workflow.RemoteWorkflowPostFunctionModuleDescriptor">
        <description>
            A remote workflow post function.
        </description>
    </described-module-type>

    <!-- ################################################# -->
    <!--       REMOVE THESE AFTER REFACTORING SCOPES!!!!   -->
    <!-- ################################################# -->
    <plugin-permission key="read_users_and_groups" name="Read Users and Groups" application="jira"
                       class="com.atlassian.plugin.connect.plugin.oldscopes.jira.JiraReadUsersAndGroupsScope">
        <description>View users and groups</description>
    </plugin-permission>

    <plugin-permission key="browse_projects" name="Browse Projects" application="jira"
                       class="com.atlassian.plugin.connect.plugin.oldscopes.jira.BrowseProjectsScope">
        <description>
            Permission to browse projects, search issues, and view individual issues (except issues that have been
            restricted via Issue Security)
        </description>
    </plugin-permission>

    <plugin-permission key="create_issues" name="Create Issues" application="jira"
                       class="com.atlassian.plugin.connect.plugin.oldscopes.jira.JiraCreateIssuesScope">
        <description>
            Permission to create issues in the project. (Note that the Create Attachments
            permission is required in order to create attachments.) Includes the ability to
            create sub-tasks (if sub-tasks are enabled).
        </description>
    </plugin-permission>

    <plugin-permission key="edit_issues" name="Edit Issues" application="jira"
                       class="com.atlassian.plugin.connect.plugin.oldscopes.jira.JiraEditIssuesScope">
        <description>
            Permission to edit issues (excluding the 'Due Date' field - see the Schedule
            Issues permission). Includes the ability to convert issues to sub-tasks and vice
            versa (if sub-tasks are enabled). Note that the Delete Issue permission is
            required in order to delete issues.
        </description>
    </plugin-permission>

    <plugin-permission key="resolve_issues" name="Resolve Issues" application="jira"
                       class="com.atlassian.plugin.connect.plugin.oldscopes.jira.JiraResolveIssuesScope">
        <description>
            Permission to resolve and reopen issues. This also includes the ability to set
            the 'Fix For version' field for issues. Also see the Close Issues permission.
        </description>
    </plugin-permission>

    <plugin-permission key="read_metadata" name="Read Metadata" application="jira"
                       class="com.atlassian.plugin.connect.plugin.oldscopes.jira.JiraReadMetadataScope">
        <description>
            Permission to read JIRA metadata.
        </description>
    </plugin-permission>

    <plugin-permission key="read_user_session_data" name="Read User Session Data" application="jira"
                       class="com.atlassian.plugin.connect.plugin.oldscopes.jira.JiraReadUserSessionData">
        <description>
            Permission to read JIRA user's session data.
        </description>
    </plugin-permission>

    <plugin-permission key="download_attachments" name="Download Issue Attachments" application="jira"
                       class="com.atlassian.plugin.connect.plugin.oldscopes.jira.JiraDownloadAttachmentScope">
        <description>
            Permission to download JIRA issue attachments.
        </description>
    </plugin-permission>

    <url-reading-web-resource-transformer key="connect-report-transformer" name="Connect report transformer"
                                          class="com.atlassian.plugin.connect.plugin.capabilities.descriptor.ReportModuleCssTransformer"/>

    <web-resource key="connect-report-thumbnails">
        <context>jira.browse.project</context>
        <resource type="download" location="/css/connect-report-thumbnails.css" name="connect-report-thumbnails.css"/>

        <transformation extension="css">
            <transformer key="jira-connect-report-transformer"/>
        </transformation>
    </web-resource>

</application>




