<application key="jira">
    <component key="jiraProductAccessor" class="com.atlassian.labs.remoteapps.product.jira.JiraProductAccessor"/>

    <web-item key="general-dropdown-item" section="system.top.navigation.bar" weight="100">
        <label>Remote Apps</label>
        <link linkId="general_dropdown_linkId"/>
    </web-item>

    <web-section key="remoteapps.general" location="general_dropdown_linkId">
    </web-section>

    <!-- remote module generators -->

    <component key="jira-issue-tab-page" class="com.atlassian.labs.remoteapps.modules.panel.jira.ViewIssuePanelModuleGenerator" />
    <component key="jira-profile-page" class="com.atlassian.labs.remoteapps.modules.page.jira.JiraProfileTabModuleGenerator" />

    <!-- api scopes -->
    <component key="jira-read_users_and_groups"
               class="com.atlassian.labs.remoteapps.product.jira.JiraReadUsersAndGroupsScope"
               />
    <component key="jira-browse_projects"
               class="com.atlassian.labs.remoteapps.product.jira.BrowseProjectsScope"
               name="Browse Projects"
                />
    <component key="jira-create_issues"
               class="com.atlassian.labs.remoteapps.product.jira.JiraCreateIssuesScope" />
    <component key="jira-edit_issues"
               class="com.atlassian.labs.remoteapps.product.jira.JiraEditIssuesScope" />
    <component key="jira-resolve_issues"
               class="com.atlassian.labs.remoteapps.product.jira.JiraResolveIssuesScope" />

    <component key="jiraWebHookProvider" class="com.atlassian.labs.remoteapps.product.jira.JiraWebHookProvider" />

    <component key="jiraEventSerializerFactory" class="com.atlassian.labs.remoteapps.product.jira.webhook.JiraEventSerializerFactory" />

    <rest key="rest-jira" path="/remoteapps" version="1">
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
        <package>com.atlassian.labs.remoteapps.rest</package>
    </rest>

    <!-- activity streams>
    <component-import key="jiraUserProfileAccessor" interface="com.atlassian.streams.spi.UserProfileAccessor"/>
    <activity-streams-provider key="apps-provider" name="Remote Apps Provider"
                               class="com.atlassian.labs.remoteapps.integration.streams.RemoteAppsActivityProvider">
    </activity-streams-provider-->

</application>







