<application key="refapp">
    <component-import key="webSudoSessionManager" interface="com.atlassian.refapp.auth.external.WebSudoSessionManager"/>

    <component key="ProductAccessor" class="com.atlassian.plugin.remotable.plugin.product.refapp.RefappProductAccessor" />
    <component key="WebSudoElevator" class="com.atlassian.plugin.remotable.plugin.product.refapp.RefappWebSudoElevator" />
    <component key="UserPreferencesRetriever" class="com.atlassian.plugin.remotable.plugin.product.refapp.RefappUserPreferencesRetriever" />

    <component key="host" class="com.atlassian.plugin.remotable.plugin.module.ApplicationPropertiesIFrameHost" />

    <rest key="rest" path="/remotable-plugins" version="1">
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
        <package>com.atlassian.plugin.remotable.plugin.rest</package>
    </rest>

    <described-module-type key="profile-page" name="User Profile Page" class="com.atlassian.plugin.remotable.plugin.module.page.ProfilePageModuleDescriptor">
        <description>
            A full-sized page that will be decorated as a page in the user's profile area.  A link will be created
            in a default location in the user's profile page.
        </description>
    </described-module-type>
</application>