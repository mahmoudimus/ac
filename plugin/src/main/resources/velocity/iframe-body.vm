<div class="ra-container" id="ra-$namespace">
  <div class="ra-content" id="embedded-$namespace"></div>
  <div class="ra-stats hidden">
    <div class="ra-loading ra-message">
      Loading plugin <a href="${plugin.displayUrl}">$plugin.name</a>.
    </div>
    <div class="ra-loaded ra-message hidden">
      Loaded plugin <a href="${plugin.displayUrl}">$plugin.name</a> in <span class="ra-elapsed"></span> ms.
    </div>
    <div class="ra-load-timeout ra-message hidden">
      Plugin <a href="${plugin.displayUrl}">$plugin.name</a> is not responding.
    </div>
  </div>
  ## @todo optimize script delivery
  #foreach ($scriptUrl in $scriptUrls)
    <script src="$scriptUrl"></script>
  #end
  <script>
    RemotablePlugins.create({
      ns: "$namespace",
      src: "$iframeSrcHtml",
      width: "$!width",
      height: "$!height",
      contextPath: "$contextPath",
      appKey: "$plugin.key",
      userId: "$userId",
      dialog: "$!dialog"
    });
  </script>
</div>
