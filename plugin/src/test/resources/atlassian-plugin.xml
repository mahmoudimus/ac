<atlassian-plugin key="com.atlassian.plugin.remotable.test" name="${project.name} - Test" plugins-version="2">
    <plugin-info>
        <version>${project.version}</version>
        <bundle-instructions>
            <Import-Package>
                com.atlassian.plugin.remotable.api*;version="${api.artifact.version}",
                com.atlassian.plugin.remotable.spi*;version="${api.artifact.version}",
                *;resolution:=optional
            </Import-Package>
        </bundle-instructions>
    </plugin-info>

    <rest key="rest" path="/remoteplugintest" version="1">
        <package>com.atlassian.plugin.remotable.test.rest</package>
    </rest>

    <component-import key="userManager" interface="com.atlassian.sal.api.user.UserManager"/>

    <plugin-permission key="resttest" name="Rest Test" class="com.atlassian.plugin.remotable.test.RestTestApiScope">
        <description>A test resource</description>
    </plugin-permission>

    <plugin-permission key="unrequested_scope" name="Unrequested API Scope" class="com.atlassian.plugin.remotable.test.UnrequestedTestApiScope">
        <description>An API Scope that never gets used</description>
    </plugin-permission>

    <component-import application="refapp" key="atlassianUserManager" interface="com.atlassian.user.UserManager"/>
    <component application="refapp" key="fixEmail" class="com.atlassian.plugin.remotable.test.refapp.RefappFixEmailAddresses"/>
</atlassian-plugin>
