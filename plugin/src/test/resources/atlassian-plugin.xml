<atlassian-plugin key="test" name="Remoteapp test plugin" plugins-version="2">
    <plugin-info>
        <version>1</version>
    </plugin-info>

    <rest key="rest" path="/remoteapptest" version="1">
        <package>com.atlassian.labs.remoteapps.test.rest</package>
    </rest>

    <component-import key="userManager" interface="com.atlassian.sal.api.user.UserManager" />

    <component key="resttest" class="com.atlassian.labs.remoteapps.test.RestTestApiScope"
            interface="com.atlassian.labs.remoteapps.spi.permission.scope.ApiScope" public="true"/>

    <component key="unrequested_scope" class="com.atlassian.labs.remoteapps.test.UnrequestedTestApiScope"
               interface="com.atlassian.labs.remoteapps.spi.permission.scope.ApiScope" public="true"/>

</atlassian-plugin>
