                            </includes>
                        </testGroup>
                        <testGroup>
                            <id>jira-jsapi</id>
                            <productIds>
                                <productId>jira</productId>
                            </productIds>
                            <systemProperties>
                                <testedProduct>jira</testedProduct>
                            </systemProperties>
                            <includes>
