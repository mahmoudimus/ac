<atlassian-plugin key="${project.groupId}.${project.artifactId}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
    </plugin-info>

    <component key="webhookRegistrationManager"
               interface="com.atlassian.plugin.remotable.plugin.webhook.WebHookIdsAccessor"
               class="com.atlassian.plugin.remotable.plugin.webhook.WebHookRegistrationManager"
               public="true" />

    <component key="webhookPublisher"
               interface="com.atlassian.plugin.remotable.plugin.webhook.WebHookPublisher"
               class="com.atlassian.plugin.remotable.plugin.webhook.WebHookPublisherImpl"
               public="true" />

    <component key="pluginUriResolver"
               class="com.atlassian.plugin.remotable.plugin.webhook.impl.PluginUriResolverImpl" />

    <component key="waitableServiceTrackerFactory" class="com.atlassian.osgi.tracker.WaitableServiceTrackerFactory" />

    <component key="requestKiller"
               class="com.atlassian.plugin.remotable.host.common.service.http.RequestKiller" />

    <component key="httpClient" interface="com.atlassian.plugin.remotable.api.service.http.HttpClient"
               class="com.atlassian.plugin.remotable.host.common.service.http.DefaultHttpClient" />

    <component-import key="eventPublisher" interface="com.atlassian.event.api.EventPublisher" />
    <!--<component-import key="httpClient" interface="com.atlassian.plugin.remotable.api.service.http.HttpClient" />-->
    <component-import key="applicationProperties" interface="com.atlassian.sal.api.ApplicationProperties" />
    <component-import key="userManager" interface="com.atlassian.sal.api.user.UserManager" />
</atlassian-plugin>