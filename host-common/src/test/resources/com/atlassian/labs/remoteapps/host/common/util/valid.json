{
  "key": "app1",
  "name": "Remote App - app1",
  "version": 1,
  "icon-url": "https://github.com/favicon.ico",
  "display-url": "http://example.com",
  "description": "This really great app",
  "vendor": {
    "name": "Atlassian",
    "url": "http://atlassian.com"
  },
  "permissions": {
    "permission": [
      {
        "scope": "browse_projects"
      },
      {
        "scope": "read_app_links"
      }
    ]
  },
  "oauth": {
    "public-key": "key"
  },
  "general-page": [
    {
      "key": "first",
      "name": "First",
      "url": "/first"
    },
    {
      "key": "second",
      "name": "Second",
      "url": "/second",
      "description": "The second url",
      "context-param": [
        {
          "name": "project_id"
        }
      ]
    },
    {
      "key": "third",
      "name": "Third",
      "url": "/third",
      "context-parameters": {
        "context-parameter": [
          {
            "name": "project_id"
          }
        ]
      }
    }
  ],
  "macro": [
    {
      "key": "macro",
      "url": "/macro",
      "context-parameters": {
        "context-parameter": [
          {
            "name": "page_id",
            "type": "query"
          },
          {
            "name": "user_id",
            "type": "header"
          }
        ]
      }
    }
  ]
}