<?xml version="1.0" encoding="UTF-8"?>

<beans:beans xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:osgi="http://www.springframework.org/schema/osgi"
             xmlns:remote-apps="http://atlassian.com/schema/spring/remote-apps"
             xmlns:context="http://www.springframework.org/schema/context"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
http://www.springframework.org/schema/osgi http://www.springframework.org/schema/osgi/spring-osgi.xsd
http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-2.5.xsd"
             default-autowire="autodetect">

    <context:component-scan base-package="servlets" use-default-filters="false" name-generator="com.atlassian.labs.remoteapps.kit.common.spring.NamedAnnotationBeanNameGenerator">
        <context:include-filter type="annotation" expression="javax.inject.Singleton" />
        <context:include-filter type="annotation" expression="javax.inject.Named" />
    </context:component-scan>
    <context:component-scan base-package="services" use-default-filters="false" name-generator="com.atlassian.labs.remoteapps.kit.common.spring.NamedAnnotationBeanNameGenerator">
            <context:include-filter type="annotation" expression="javax.inject.Singleton" />
            <context:include-filter type="annotation" expression="javax.inject.Named" />
        </context:component-scan>

    <beans:bean id="inject-post-processor" class="org.springframework.beans.factory.annotation.AutowiredAnnotationBeanPostProcessor">
        <beans:property name="autowiredAnnotationType" value="javax.inject.Inject" />
    </beans:bean>

    <context:component-scan base-package="com.atlassian.labs.remoteapps.kit.servlet" use-default-filters="false" name-generator="com.atlassian.labs.remoteapps.kit.common.spring.NamedAnnotationBeanNameGenerator">
        <context:include-filter type="annotation" expression="javax.inject.Singleton" />
        <context:include-filter type="annotation" expression="javax.inject.Named" />
    </context:component-scan>

    <remote-apps:service-reference-scan />
</beans:beans>
